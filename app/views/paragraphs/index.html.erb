<h1>Listing paragraphs</h1>

<table>
  <tr>
    <th>Content</th>
  </tr>

<% @paragraphs.each do |paragraph| %>
  <tr>
    <td><%=h paragraph.content %></td>
    <td class="show"><%= link_to content_tag("span",'Show'), paragraph %></td>
    <td class="edit"><%= link_to content_tag("span",'Edit'), edit_paragraph_path(paragraph) %></td>
    <td class="destroy"><%= link_to content_tag("span",'Destroy'), paragraph, :confirm => 'Are you sure?', "data-remote" => true, "data-method" => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New paragraph', new_paragraph_path %>