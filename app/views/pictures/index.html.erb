<h1>Listing pictures</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Tags</th>
    <th>Image</th>
  </tr>

<% @pictures.each do |picture| %>
  <tr>
    <td><%=h picture.title %></td>
    <td><%=h picture.description %></td>
    <td><%=h picture.element.tag_list %></td>
    <td><%= image_tag picture.image.url(:tiny_thumb) if picture.image.file? %></td>
    <td class="show"><%= link_to content_tag("span",'Show'), picture %></td>
    <td class="edit"><%= link_to content_tag("span",'Edit'), edit_picture_path(picture) %></td>
    <td class="destroy"><%= link_to content_tag("span",'Destroy'), picture, :confirm => 'Are you sure?', "data-remote" => true, "data-method" => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New picture', new_picture_path %>