<div id="flash">
<% flash.each do |name, msg| %>
  <% unless msg.nil? %>
  <div id="<%= "flash_#{name}" %>" class="msg">
    <p><%= msg %></p>
  </div>
  <% end %>
<% end %>
<script type="text/javascript">
$("#flash div").each(function(i,e){
  $(e).hide().slideDown().delay(2600).slideUp()
})
</script>
</div>
