<h1>Listing elements</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Position</th>
    <th>Tags</th>
    <th>Ancestry</th>
    <th>Ancestry depth</th>
    <th>Attachable id</th>
    <th>Attachable type</th>
  </tr>

<% @elements.each do |element| %>
  <tr id="element-<%=h element.id %>">
    <td><%=h element.name %></td>
    <td><%=h element.position %></td>
    <td><%=h element.tag_list %></td>
    <td><%=h element.ancestry %></td>
    <td><%=h element.ancestry_depth %></td>
    <td><%=h element.attachable_id %></td>
    <td><%=h element.attachable_type %></td>
    <td class="show"><%= link_to content_tag("span",'Show'), element %></td>
    <td class="edit"><%= link_to content_tag("span",'Edit'), edit_element_path(element) %></td>
    <td class="destroy"><%= link_to content_tag("span",'Destroy'), element, :confirm => 'Are you sure?', "data-remote" => true, "data-method" => :delete %></td>
  </tr>
<% end %>
</table>
  
