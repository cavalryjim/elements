<h1>Listing elements</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Position</th>
    <th>Tags</th>
    <th>Ancestry</th>
    <th>Ancestry depth</th>
    <th>Attachable id</th>
    <th>Attachable type</th>
  </tr>

<% @elements.each do |element| %>
  <tr>
    <td><%=h element.name %></td>
    <td><%=h element.position %></td>
    <td><%=h element.tag_list %></td>
    <td><%=h element.ancestry %></td>
    <td><%=h element.ancestry_depth %></td>
    <td><%=h element.attachable_id %></td>
    <td><%=h element.attachable_type %></td>
    <td class="show"><%= link_to content_tag("span",'Show'), element %></td>
    <td class="edit"><%= link_to content_tag("span",'Edit'), edit_element_path(element) %></td>
    <td class="destroy"><%= link_to content_tag("span",'Destroy'), element, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<style>
.show a,.edit a,.destroy a {
	display:block;
	width:16px; height:16px;
	margin:0; padding:0;
	text-decoration: none;
}
.show a span,.edit a span,.destroy a span {
  display:none;
}
.show a {
	background: url("/images/actions/view.png") top left no-repeat;
}
.edit a {
	background: url("/images/actions/edit.gif") top left no-repeat;
}
.destroy a {
	background: url("/images/actions/delete.png") top left no-repeat;
}


</style>
  
<br />

<%= link_to 'New element', new_element_path %>

<br />

