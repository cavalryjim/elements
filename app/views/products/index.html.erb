<h1>Listing products</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Title</th>
    <th>Description</th>
    <th>Expiration date</th>
    <th>Image link</th>
    <th>Link</th>
    <th>Location</th>
    <th>Payment accepted</th>
    <th>Payment notes</th>
    <th>Pickup</th>
    <th>Price</th>
    <th>Price type</th>
    <th>Quantity</th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%=h product.name %></td>
    <td><%=h product.title %></td>
    <td><%=h product.description %></td>
    <td><%=h product.expiration_date %></td>
    <td><%=h product.image_link %></td>
    <td><%=h product.link %></td>
    <td><%=h product.location %></td>
    <td><%=h product.payment_accepted %></td>
    <td><%=h product.payment_notes %></td>
    <td><%=h product.pickup %></td>
    <td><%=h product.price %></td>
    <td><%=h product.price_type %></td>
    <td><%=h product.quantity %></td>
    <td><%= link_to 'Show', product %></td>
    <td><%= link_to 'Edit', edit_product_path(product) %></td>
    <td><%= link_to 'Destroy', product, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

